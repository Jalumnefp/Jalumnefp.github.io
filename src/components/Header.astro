---
import { Image } from "astro:assets"
const { myFullName, myFullFace } = Astro.props
---

<header id="header" class="flex flex-wrap my-20 justify-center">
    <div class="max-sm:mb-10 sm:ms-5 hover:animate-spin">
        <Image class="rounded-full size-40" src={myFullFace} alt="My-face" />
    </div>
    <div class="mx-10 text-center my-auto">
        <h1 class="text-4xl font-bold font-sans">{myFullName}</h1>
        <p class="text-2xl">Programador de software</p>
    </div>
</header>